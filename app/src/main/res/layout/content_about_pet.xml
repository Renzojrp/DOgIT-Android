<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AboutPetActivity"
    tools:showIn="@layout/activity_about_pet">

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/photoANImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photoANImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/sample_name"
        android:fontFamily="@font/sourcesansprolight"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/descriptionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_description_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/descriptionTextView"
        app:layout_constraintBottom_toBottomOf="@id/descriptionTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:fontFamily="@font/sourcesansprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/descriptionIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_description"/>

    <ImageView
        android:id="@+id/weightIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_balance_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/weightTextView"
        app:layout_constraintBottom_toBottomOf="@id/weightTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/weightTextView"
        android:fontFamily="@font/sourcesansprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:layout_constraintStart_toEndOf="@id/weightIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_weight"/>

    <ImageView
        android:id="@+id/sizeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_meter_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/sizeTextView"
        app:layout_constraintBottom_toBottomOf="@id/sizeTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sizeTextView"
        android:fontFamily="@font/sourcesansprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weightTextView"
        app:layout_constraintStart_toEndOf="@id/sizeIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_size"/>

    <ImageView
        android:id="@+id/rescueDateIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_rescue_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/rescueDateTextView"
        app:layout_constraintBottom_toBottomOf="@id/rescueDateTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/rescueDateTextView"
        android:fontFamily="@font/sourcesansprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sizeIcon"
        app:layout_constraintStart_toEndOf="@id/rescueDateIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_rescue_date"/>

    <ImageView
        android:id="@+id/genderIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_gender_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/genderTextView"
        app:layout_constraintBottom_toBottomOf="@id/genderTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/genderTextView"
        android:fontFamily="@font/sourcesansprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rescueDateTextView"
        app:layout_constraintStart_toEndOf="@id/genderIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_gender"/>

</android.support.constraint.ConstraintLayout>