<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.com.dogit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DOgITApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.RecoverPasswordActivity"
            android:label="@string/title_activity_recover_password"
            android:parentActivityName=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.EditUserProfileActivity"
            android:label="@string/title_activity_edit_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AboutPetActivity"
            android:label="@string/title_activity_about_pet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddPetActivity"
            android:label="@string/title_activity_add_pet"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.AboutEventActivity"
            android:label="@string/title_activity_abou_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:parentActivityName=".activities.AboutEventActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.AboutEventActivity" />
        </activity>
        <activity
            android:name=".activities.AboutPublicationActivity"
            android:label="@string/title_activity_about_publication"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddPublicationActivity"
            android:label="@string/title_activity_add_publication"
            android:parentActivityName=".activities.AboutPublicationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.AboutPublicationActivity" />
        </activity>
        <activity
            android:name=".activities.SendRequestActivity"
            android:label="@string/title_activity_send_request"
            android:parentActivityName=".activities.AboutPublicationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.dogit.activities.AboutPublicationActivity" />
        </activity>
    </application>

</manifest>